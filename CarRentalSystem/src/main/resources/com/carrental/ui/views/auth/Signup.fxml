<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.ImageView?>

<StackPane prefWidth="1000.0" prefHeight="800.0" stylesheets="@/com/carrental/ui/css/style.css"
           xmlns="http://javafx.com/javafx/8.0" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.carrental.controllers.auth.SignupController">

    <VBox alignment="TOP_CENTER" spacing="20" maxWidth="800.0" styleClass="screen-container">

        <!-- Branding -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <ImageView fx:id="logoImage" fitWidth="80.0" fitHeight="80.0"/>
            <Label text="Harmony" styleClass="logo-text"/>
        </HBox>

        <Label text="Create Your Harmony Account" styleClass="main-title"/>
        <Label text="* Required to complete your Signup enrollment" styleClass="error-text"/>

        <!-- Sections: Profile, Contact, Payment -->
        <VBox alignment="CENTER_LEFT" spacing="10">
            <GridPane hgap="15" vgap="15">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                <columnConstraints>
                    <ColumnConstraints minWidth="200"/>
                    <ColumnConstraints minWidth="300"/>
                </columnConstraints>

                <Label text="User Name *" styleClass="input-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="usernameField" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label fx:id="errorUsername" text="" styleClass="error-text" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Email Address *" styleClass="input-label" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField fx:id="emailField" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                <Label fx:id="errorEmail" text="" styleClass="error-text" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                <Label text="Password *" styleClass="input-label" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                <PasswordField fx:id="passwordField" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                <Label fx:id="errorPassword" text="" styleClass="error-text" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
            </GridPane>
        </VBox>

        <!-- Sign Up Button -->
        <HBox alignment="CENTER" spacing="15">
            <Button text="Sign Up" styleClass="signup-button" onAction="#handleSignup"/>
            <Button text="Back to Login" styleClass="login-button" onAction="#goToLogin"/>
        </HBox>

    </VBox>
</StackPane>
